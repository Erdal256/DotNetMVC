@model MovieModel
@{
    ViewBag.Title = "Edit";
}

<div class="paddingtop">
    <h2>@ViewBag.Title</h2>
    @using (Html.BeginForm())
    {
        @*<input  type="hidden" name="Id" value="@Model.Id"/>*@
        @*@Html.Hidden("Id",Model.Id)*@
        @Html.HiddenFor(m => m.Id)

        @*@Html.ValidationSummary(true, null , new { @class ="text-warning"})*@
        @Html.ValidationSummary(false, null, new { @class = "text-warning" })

        @Html.AntiForgeryToken()
        <div class="form-group row">
            @*@Html.Label("Name", new { @class = "col-sm-2 col-form-label" })*@
            @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @*@Html.TextBox("Name", Model.Name, new { @class = "" })*@
                @Html.TextBoxFor(m => m.Name, Model.Name, new { @class = "form-contorl", placeholder = "Enter box office name." })

                @*@Html.ValidationMessage("Name",new { @class ="text-danger"})*@
                @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.BoxOfficeReturn, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.BoxOfficeReturn, Model.Name, new { @class = "form-contorl", placeholder = "Enter box office return." })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.ProductionYear, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @*@Html.DropDownList("ProductionYear", ViewData["Years"] as SelectList, "-- Select Year --", new { @class = "form-contorl" })*@
                @Html.DropDownListFor(m => m.ProductionYear, ViewData["Years"] as SelectList, "-- Select Year --", new { @class = "form-contorl" })
                @Html.ValidationMessageFor(m=> m.ProductionYear,null , new { @class ="text-danger"})
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
                &nbsp;&nbsp;&nbsp;
                <button type="reset" class="btn btn-denger">Submit</button>
            </div>
        </div>
    }
</div>

