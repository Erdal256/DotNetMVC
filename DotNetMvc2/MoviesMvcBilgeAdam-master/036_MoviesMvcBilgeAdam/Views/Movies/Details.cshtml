@model MovieModel 
@{
    ViewBag.Title = "MovieDetails";
}
<div class="paddingtop">
    <h2>
     @*@Html.Display("Movie Details")
        
        <label>Movie Details</label>*@
        @Html.Label("Movie Details")
    </h2>


    <div class="row">
        <div class="col-2">
            <b>
                @*Name*@
                @Html.DisplayNameFor(m => m.Name)
            </b>
        </div>
        <div class="col-4">
            <strong>
                @*@Model.Name*@
                @Html.DisplayFor(m => m.Name)
            </strong>
        </div>
        <div class="col-2">
            <b>
                @*Production Year*@
                @Html.DisplayNameFor(m => m.ProductionYear)
            </b>
        </div>
        <div class="col-4">
            <b>
                @*@Model.ProductionYear*@
                @Html.DisplayFor(m => m.ProductionYear)
            </b>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            @*Box Office Return*@
            @Html.DisplayNameFor(m => m.BoxOfficeReturn)
        </div>
        <div class="col-4">
            @*@Model.BoxOfficeReturn*@
            @Html.DisplayFor(m=> m.BoxOfficeReturn)
        </div>
        <div class="col-2">
            @*Direktors*@
            @Html.DisplayNameFor(m => m.Directors)
        </div>
        <div class="col-4">
            @{ 
                string directors = "";
                foreach(DirectorModel directorModel in Model.Directors)
                {
                    directors += directorModel.Name + " " + directorModel.Surname + "<br />";
                }
                @Html.Raw(directors)
            }
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @*@Html.ActionLink("Movie Link", "List")
            <a href="@Url.Action("List","Movies")">Movie List</a>*@
            <a href="@Url.Action("List"),("List")">Movie List</a>
        </div>
    </div>
</div>


